# Update the package list to make sure we install the latest version
sudo apt update

# Install Nginx
sudo apt install -y nginx

sudo service nginx start

echo "Hello World!" | sudo tee /var/www/html/index.html
if pgrep -x "nginx" > /dev/null
then
    echo "Nginx is running."
else
    echo "Nginx failed to start. Please check Nginx logs."
fi
